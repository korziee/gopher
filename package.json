{
  "name": "gopher",
  "version": "1.0.0",
  "description": "a gopher server implemented in node",
  "main": "index.js",
  "repository": "git@github.com:korziee/gopher.git",
  "author": "Kory <kory.porter2@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:watch": "npx tsc -w",
    "build:prod": "npx tsc && export NODE_ENV=production && pm2 start 2 --node-args='-r dotenv/config'",
    "start": "npx nodemon -r dotenv/config compiled/index.js -w compiled",
    "env": "sync-dotenv"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run env"
    }
  },
  "dependencies": {
    "@korziee/nrl": "github:korziee/nrl-crawler",
    "date-fns": "^1.30.1",
    "dotenv": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^11.12.0",
    "husky": "^2.3.0",
    "nodemon": "^1.18.10",
    "sync-dotenv": "^2.1.0",
    "tslint": "^5.14.0",
    "typescript": "^3.5.1"
  }
}
